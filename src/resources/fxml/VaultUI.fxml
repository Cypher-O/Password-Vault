<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.VaultUIController">
    <GridPane alignment="CENTER" hgap="10" vgap="10" padding="10">
        <Label text="Site:"/>
        <TextField fx:id="siteField"/>

        <Label text="Username:"/>
        <TextField fx:id="usernameField"/>

        <Label text="Password:"/>
        <PasswordField fx:id="passwordField"/>

        <Button text="Add/Update" onAction="#addOrUpdatePassword"/>
        <Button text="Load Vault" onAction="#loadVault"/>
    </GridPane>
    <TextArea fx:id="vaultTextArea" editable="false"/>
    <Button fx:id="toggleButton" text="Show Passwords"/>
</VBox>
